{
  "name": "@gaainf/node-service",
  "version": "1.2.0",
  "description": "Run console command as a service using NodeJS",
  "main": "index.js",
  "typings": "./types/index.d.ts",
  "scripts": {
    "lint": "eslint . --ext .js",
    "build": "tsc",
    "test": "jest"
  },
  "ensure": {
    "deps": {
      "checkDirs": [
        "lib/*",
        "*.js"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gaainf/node-service.git"
  },
  "keywords": [
    "node",
    "service",
    "console",
    "start",
    "stop",
    "status",
    "pid",
    "stdout",
    "stderr"
  ],
  "standard": {
    "globals": [
      "test",
      "beforeEach",
      "afterEach"
    ],
    "ignore": [
      "/node_modules",
      "/test",
      "/doc",
      "/example"
    ]
  },
  "author": "gaainf <infinum@mail.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gaainf/node-service/issues"
  },
  "homepage": "https://github.com/gaainf/node-service#readme",
  "devDependencies": {
    "eslint": "^7.11.0",
    "husky": "^4.3.5",
    "jest": "^27.4.5",
    "typescript": "^4.4.3"
  },
  "es6": true,
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn build",
      "pre-push": "yarn test"
    }
  }
}
